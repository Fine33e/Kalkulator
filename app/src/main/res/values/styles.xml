<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="FunctionalButtons">
        <item name="android:textSize">40sp</item>
        <item name="android:minHeight">90dp</item>
        <item name="android:textColor">@color/colorButtonTxt</item>
        <item name="android:background">@drawable/round_buttons</item>
    </style>
    <style name="FunctionalButtonsA">
        <item name="android:textSize">30sp</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:textColor">@color/colorButtonTxt</item>
        <item name="android:background">@drawable/round_buttons</item>
    </style>

    <style name="MainActivityButtons">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorButtonBlue</item>
        <item name="android:background">@drawable/round_buttons</item>
    </style>

    <style name="FunctionalButtonsL">
        <item name="android:textSize">30sp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textColor">@color/colorButtonTxt</item>
        <item name="android:background">@drawable/round_buttons</item>
    </style>

    <style name="FunctionalButtonsAL">
        <item name="android:textSize">25sp</item>
        <item name="android:minHeight">38dp</item>
        <item name="android:textColor">@color/colorButtonTxt</item>
        <item name="android:background">@drawable/round_buttons</item>
    </style>
</resources>
